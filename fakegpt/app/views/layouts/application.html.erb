<!DOCTYPE html>
<html>
  <head>
    <title>Fakegpt</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

<body>
  <div class="wrapper">
    <% if current_user %>
      <%= render partial: 'layouts/essentials/top_navbar' %>
      <%= render partial: "layouts/essentials/sidebar" %>
    <% else %>
      <%= render partial: 'layouts/essentials/welcome_top_navbar' %>
    <% end %>
    <div class="content-wrapper px-4 py-2">
      <%= yield %>
    </div>
  </div>
</body>

</html>
