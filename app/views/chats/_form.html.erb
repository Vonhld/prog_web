<div class="container-fluid">
  <%= form_with(model: chat) do |form| %>
  <div class="row p-2">
    <div class="card card-outline col-12">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-sm-5">
            <h4><i class="fa-solid fa-comment-medical"></i> Novo Chat</h4>
          </div>
        </div>
        <hr class="mb-4"/>
        <div class="row">
          <div class="input-group mb-3 mx-5 col">
            <%= form.text_field :title, class: 'form-control', placeholder: 'Digite um nome para o chat' %>
          </div>
        </div>
      </div>

      <div class="card-footer text-center">
            <%= form.submit class: "btn btn-primary w-50" %>
      </div>
      <br/>
      <div class="row ml-1 mb-1">
        <%= link_to 'Voltar', home_path, class: "btn btn-default" %>
      </div>
    </div>
  <%end%>
  </div>
</div>